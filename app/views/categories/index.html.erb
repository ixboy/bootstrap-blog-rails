<h1>Categories</h1>
<p>
    <%= link_to 'create new Category', new_category_path, class: 'btn btn-primary' %>
</p>
<table class="table table-striped table-success table-hover"  >
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr >
        <td><%= category.name %></td>
        <td >
          <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-secondary' %>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>