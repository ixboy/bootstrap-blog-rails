<article class="blog-post">
    <h2 class="blog-post-title"><%= article.title %></h2>
    <p class="blog-post-meta"><%= date_helper(article.created_at)%>, by: <strong><%= article.user.email %></strong></p>
    <p>
        <%= truncate(article.body, length: 250) %><br/>
        <%= link_to 'Continue reading...', article, class: 'btn btn-link' %>
    </p>
    <%= link_to "Edit", edit_article_path(article), class: 'btn btn-secondary'  if policy(article).update? %>
    <%= link_to "Destroy", article_path(article), data: {
                    method: :delete,
                    confirm: "Are you sure?"
                  }, class: 'btn btn-danger' if policy(article).destroy? %>
</article>
