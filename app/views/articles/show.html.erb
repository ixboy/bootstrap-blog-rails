<article class="blog-post">
  <h2 class="blog-post-title"><%= @article.title %></h2>
  <p class="blog-post-meta">
    <%= render 'article_detail', article: @article%>
  </p>
  <p><%= @article.body %></p>
  <%= link_to "Go Back", root_path, class: 'btn btn-secondary' %>
  <%= edit_article_link(@article) %>
  <%= delete_article_link(@article) %>

<h3 class="mt-4">Comments</h2>
<%= comments %>

<h4 class="mt-4">Add a comment: </h2>
<%= add_comment%>
</article>